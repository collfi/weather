<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Text.TextView_NavDrawer">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@drawable/selector_navdrawer_text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="AppTheme.Text.Text_Normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.Text.Text_Bigger">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Text.Text_Biggest">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Text.Text_Params">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
    </style>

    <style name="AboutDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/AboutDialogAnimation</item>
    </style>

    <style name="AboutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
    </style>
</resources>
